FROM python:3.10-slim

# System deps for IndicTransToolkit + torch CPU
RUN apt-get update && apt-get install -y --no-install-recommends \
        git git-lfs curl wget unzip ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && git lfs install

WORKDIR /app

# Install Python deps (torch CPU is huge â€“ keep it in the image)
COPY requirements-translate.txt .
RUN pip install --no-cache-dir \
    --timeout=600 \
    --retries=10 \
    -r requirements-translate.txt

# Install CPU-only PyTorch from official index
RUN pip install --no-cache-dir \
    torch==2.4.1+cpu \
    torchvision==0.19.1+cpu \
    torchaudio==2.4.1+cpu \
    --index-url https://download.pytorch.org/whl/cpu

# Copy only the script
COPY translate_api.py .

EXPOSE 5000

CMD ["python", "translate_api.py"]