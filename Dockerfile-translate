FROM python:3.10-slim

# System deps for IndicTransToolkit + torch CPU
RUN apt-get update && apt-get install -y --no-install-recommends \
        git git-lfs curl wget unzip ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && git lfs install

WORKDIR /app

# Install Python deps (torch CPU is huge â€“ keep it in the image)
COPY requirements-translate.txt .
RUN pip install --no-cache-dir \
    --timeout=600 \
    --retries=10 \
    torch==2.3.1+cpu -f https://download.pytorch.org/whl/torch_stable.html \
    -r requirements-translate.txt


RUN pip install --no-cache-dir \
    --timeout=600 \
    --retries=10 \
    fastapi uvicorn[standard] pydantic==2.5.3 python-dotenv

# Install CPU-only PyTorch from official index
RUN pip install --no-cache-dir \
    torch==2.3.1+cpu \
    torchvision==0.18.1+cpu \
    torchaudio==2.3.1+cpu \
    --index-url https://download.pytorch.org/whl/cpu



# Install remaining dependencies
RUN pip install --no-cache-dir \
    sentencepiece \
    sacremoses \
    indic-nlp-library \
    CTranslate2 \
    huggingface-hub \
    tqdm \
    deepl==1.17.0 \
    httpx==0.26.0




# Create models directory
RUN mkdir -p /app/models
# Copy only the script
COPY translate_api.py .

EXPOSE 5000

# CMD ["python", "translate_api.py"]
CMD ["uvicorn", "translate_api:app", "--host", "0.0.0.0", "--port", "5000", "--workers", "1"]